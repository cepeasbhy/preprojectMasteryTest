@model Product

<section id="product-details">
    <div class="section-title mb-3">
        <h4>PRODUCT INFORMATION</h4>
    </div>
    <div class="section-content d-flex">
        <div class="product-photo me-3">
            <img src="~/img/products/@Model.urlPhoto" width="300" height="300"/>
        </div>
        <div class="product-info">
            <div class="product-title">
                <h4 style="color: #7360DF">
                    @Model.name
                </h4>
                <h5>₱@Model.price</h5>
            </div>
            <div class="product-content ms-3" style="max-width: 700px">
                <div class="product-detail row mb-3">
                    <div class="detail-item col-sm-3 text-black-50">SIZE:</div>
                    <div class="detail-item col-5">@Model.size</div>
                </div>
                <div class="product-detail row mb-3">
                    <div class="detail-item col-sm-3 text-black-50">COLOR:</div>
                    <div class="detail-item col-5">@Model.color</div>
                </div>
                <div class="product-detail row mb-3">
                    <div class="detail-item col-sm-3 text-black-50">WEIGHT:</div>
                    <div class="detail-item col-5">@Model.weight</div>
                </div>
                <div class="product-detail row mb-3">
                    <div class="detail-item col-sm-3 text-black-50">DATE ADDED:</div>
                    <div class="detail-item col-5">@Model.dateAdded</div>
                </div>
                
                @if (Model.description != null)
                {
                    <div class="product-detail">
                        <p class="text-black-50">PRODUCT DESCRIPTION:</p>
                        <p>
                            @Model.description
                        </p>
                    </div>
                }
                
            </div>
            
        </div>
    </div>
</section>